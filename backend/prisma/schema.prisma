
generator client {
  provider = "prisma-client-js"
}
        
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  password     String
  role         Role      @default(USER)
  verified     Boolean   @default(false)
  otpCode      String?           // Used for email verification
  otpExpires   DateTime?         // Expiry time for OTP
  resetToken      String?           // Used for email verification
  resetExpires   DateTime?         // Expiry time for OTP
  refreshToken String?           // Nullable, only after login
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model productMeta {
  id       Int @id @default(autoincrement())
  sanityId  String   @unique
  price     Int
  stock     Int
  rating    Float 
  numReviews Int 

}

model Review {
  id         Int @id @default(autoincrement())
  userId     Int
  productId  String
  rating     Int
  comment    String
  createdAt  DateTime
}


enum Role {
  USER
  ADMIN
}
